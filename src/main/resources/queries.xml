    <folder name="test-postgres">
        <query name="Simple Select">
            <sql><![CDATA[SELECT 1 as test_column;]]></sql>
            <description>Basic test query</description>
        </query>
        <query name="Current Time">
            <sql><![CDATA[SELECT NOW() as current_time ;]]></sql>
            <description>Get current database timestamp</description>
        </query>
        <query name="Database Version">
            <sql><![CDATA[SELECT version() ;]]></sql>
            <description>PostgreSQL version information</description>
        </query>
        <query name="Active Connections">
            <sql><![CDATA[SELECT count(*) as active_connections
FROM pg_stat_activity
WHERE state = 'active';]]></sql>
            <description>Count active database connections</description>
        </query>
        <query name="Table Sizes">
            <sql><![CDATA[SELECT
    schemaname,
    tablename,
    pg_size_pretty(pg_total_relation_size(schemaname||'.'||tablename)) AS size
FROM pg_tables
WHERE schemaname NOT IN ('pg_catalog')
ORDER BY pg_total_relation_size(schemaname||'.'||tablename) DESC
LIMIT 10;]]></sql>
            <description>Top 10 largest tables</description>
        </query>
